    <Button
        android:id="@+id/botonestoybien"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circuloboton1"
        android:drawableTop="@drawable/ic_estoybien"
        android:paddingTop="25dp"
        android:text="Estoy Bien"
        android:textColor="#fff"
        android:layout_marginTop="174dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/botonestoyatrapado"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circuloboton2"
        android:drawableTop="@drawable/ic_action_name2"
        android:paddingTop="25dp"
        android:text="Estoy Herido"
        android:textColor="#fff"
        android:layout_alignTop="@+id/botonestoybien"
        android:layout_toStartOf="@+id/botopeligro" />
    <Button
        android:id="@+id/botoncompaeroherido"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circuloboton3"
        android:drawableTop="@drawable/ic_action_name3"
        android:paddingTop="25dp"
        android:text="CompaÃ±ero Herido"
        android:textColor="#fff"
        android:layout_below="@+id/botonestoyatrapado"
        android:layout_toEndOf="@+id/botonestoyatrapado"
        android:layout_marginTop="45dp" />

</RelativeLayout>
